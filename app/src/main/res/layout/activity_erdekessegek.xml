<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:foreground="@drawable/ic_baseline_arrow_back_24"
        android:background="@drawable/recyclerkerekites"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inforecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/kerdojel_5_"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        tools:itemCount="5"
        tools:listitem="@layout/erdekessegekdesign" />

</androidx.constraintlayout.widget.ConstraintLayout>
